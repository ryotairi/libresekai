generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Unit {
  idol // More more jump!
  light_sound // Leo/need
  none // What? idk
  piapro // VIRTUAL SINGER
  school_refusal // Nightcord at 25:00
  street // Vivid Bad SQUAD
  theme_park // Wonderlands x Showtime
}

enum MusicDifficulty {
  easy
  normal
  hard
  expert
  master
  append
}

enum PlayTime {
  solo // only solo bc coop isnt implemented yet
}

enum PlayResult {
  not_clear
  clear
}

model User {
  userId     BigInt @unique
  credential String

  signature       String
  platform        String
  deviceModel     String
  operatingSystem String

  registeredAt DateTime @default(now())

  gameData       UserGameData?    @relation(fields: [userGameDataUserId], references: [userId])
  boost          UserBoostStatus? @relation(fields: [userBoostStatusUserId], references: [userId])
  tutorialStatus String           @default("start")
  userLiveId     String?

  areas Json

  name                  String
  userGameDataUserId    BigInt?
  userBoostStatusUserId BigInt?
  userLive              UserLive?

  @@map("users")
}

model UserLive {
  userId BigInt @unique

  liveId String

  musicId           Int
  musicDifficultyId Int
  musicVocalId      Int
  deckId            Int
  boostCount        Int
  isAutoPlay        Boolean

  // has results only after finishing.
  perfectCount Int?
  greatCount   Int?
  goodCount    Int?
  badCount     Int?
  missCount    Int?
  score        Int?
  life         Int?
  maxCombo     Int?
  tapCount     Int?

  user User? @relation(fields: [userId], references: [userId])

  @@map("users_live")
}

model UserBoostStatus {
  userId     BigInt   @unique
  current    Int
  recoveryAt DateTime
  users      User[]

  @@map("users_boost")
}

/**
 * {
 * "userId": 714846936821514200,
 * "musicId": 50,
 * "musicDifficulty": "expert",
 * "playType": "solo",
 * "playResult": "not_clear",
 * "highScore": 74522,
 * "fullComboFlg": false,
 * "fullPerfectFlg": false,
 * "mvpCount": 0,
 * "superStarCount": 0,
 * "createdAt": 1770828821377,
 * "updatedAt": 1770828821377
 * }
 */
model UserMusicResult {
  uniqueResultId String @id

  userId          BigInt
  musicId         Int
  musicDifficulty MusicDifficulty
  playType        PlayTime        @default(solo)
  playResult      PlayResult
  highScore       Int
  fullComboFlg    Boolean
  fullPerfectFlg  Boolean
  mvpCount        Int
  superStarCount  Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user_music_results")
}

model UserGameData {
  userId BigInt @unique

  deck        Int @default(1)
  rank        Int @default(1)
  exp         Int @default(0)
  totalExp    Int @default(0)
  coin        Int @default(0)
  virtualCoin Int @default(0)
  crystals    Int @default(10000)

  decks      UserDeck[]
  characters UserCharacter[]
  units      UserUnit[]
  musics     UserMusic[]
  users      User[]

  @@map("users_game_data")
}

model UserUnit {
  uniqueUnitId String @id

  userId             BigInt
  unit               Unit
  rank               Int           @default(1)
  exp                Int           @default(0)
  totalExp           Int           @default(0)
  userGameData       UserGameData? @relation(fields: [userGameDataUserId], references: [userId])
  userGameDataUserId BigInt?

  @@map("user_units")
}

/**
 * {
 * "userId": 714846936821514200,
 * "cardId": 105,
 * "level": 1,
 * "exp": 0,
 * "totalExp": 0,
 * "skillLevel": 1,
 * "skillExp": 0,
 * "totalSkillExp": 0,
 * "masterRank": 0,
 * "specialTrainingStatus": "not_doing",
 * "defaultImage": "original",
 * "duplicateCount": 0,
 * "createdAt": 1770650790950,
 * "episodes": [
 * {
 * "cardEpisodeId": 209,
 * "scenarioStatus": "unreleased",
 * "scenarioStatusReasons": [],
 * "isNotSkipped": false
 * },
 * {
 * "cardEpisodeId": 210,
 * "scenarioStatus": "can_not_read",
 * "scenarioStatusReasons": [
 * "unread_before_scenario",
 * "not_enough_release_condition"
 * ],
 * "isNotSkipped": false
 * }
 * ]
 * }
 */

model CardEpisode {
  id                    String  @id
  cardEpisodeId         Int
  scenarioStatus        String // unreleased
  scenarioStatusReasons Json // []
  isNotSkipped          Boolean
  card                  Card?   @relation(fields: [cardId], references: [id])
  cardId                String?

  @@map("card_episodes")
}

model Card {
  id String @id

  userId                BigInt
  cardId                Int
  level                 Int
  exp                   Int
  totalExp              Int
  skillLevel            Int
  skillExp              Int
  totalSkillExp         Int
  masterRank            Int
  specialTrainingStatus String // not_doing
  defaultImage          String // original
  duplicateCount        Int
  createdAt             DateTime      @default(now())
  episodes              CardEpisode[]

  @@map("cards")
}

/**
 * {
 * "userId": 714846936821514200,
 * "deckId": 1,
 * "name": "Group 01",
 * "leader": 81,
 * "subLeader": 89,
 * "member1": 81,
 * "member2": 89,
 * "member3": 93,
 * "member4": 97,
 * "member5": 101
 * }
 */

model UserDeck {
  uniqueDeckId String @id

  userId       BigInt
  deckId       Int
  name         String
  members      Int[] // member1, member2, member3, member4, member5
  userGameData UserGameData? @relation(fields: [userId], references: [userId])

  @@map("user_decks")
}

model UserCharacter {
  uniqueCharacterId String        @id
  userId            BigInt
  characterId       Int
  characterRank     Int           @default(1)
  exp               Int           @default(0)
  totalExp          Int           @default(0)
  userGameData      UserGameData? @relation(fields: [userId], references: [userId])

  @@map("user_characters")
}

model UserMusic {
  uniqueMusicId String @id

  userId  BigInt
  musicId Int

  vocals                Int[]
  availableDifficulties String[] @default(["easy", "normal", "hard", "expert"]) // manually add append. master upon unlock.

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  userGameData UserGameData? @relation(fields: [userId], references: [userId])
}
